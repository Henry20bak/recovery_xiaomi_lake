on init
    mkdir /vendor/firmware 0777 root root
    mkdir /vendor/lib64 0777 root root
    mkdir /vendor/lib 0777 root root
    
on fs
    chmod 0666 /dev/input/event*
    chmod 0666 /dev/mtk-tpd
    chmod 0666 /dev/touch
    chmod 0666 /dev/focaltech_touch
    chmod 0666 /dev/nvt_touch
    chown system system /dev/touch
    chown system system /dev/focaltech_touch
    chown system system /dev/nvt_touch
    chmod 0777 /sys/devices/platform/mtk-tpd
    chown system system /sys/devices/platform/mtk-tpd
    
service touch_modeset /system/bin/recovery-persist
    user root
    group root
    oneshot
    disabled
    seclabel u:r:recovery:s0

on boot
    # Initialize touch devices
    write /proc/touchpanel/double_tap 1
    write /sys/devices/platform/mtk-tpd/double_tap_enable 1
    
    # FocalTech permissions
    chmod 0777 /sys/devices/platform/focaltech_touch/*
    chown system system /sys/devices/platform/focaltech_touch/*
    
    # Novatek permissions
    chmod 0777 /sys/devices/platform/nvt_touch/*
    chown system system /sys/devices/platform/nvt_touch/*
    
    start touch_modeset